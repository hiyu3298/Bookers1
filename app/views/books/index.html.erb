<% if flash[:notice] %>
    <div class="flash">
   	<%= flash[:notice] %>
    </div>
<% end %>

<h1 class="books">Books</h1>
<table>
  <thead>
    <tr>
      <th><b>Title</b></th>
			<th><b>Body</b></th>
			<th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book, class: "show_#{book.id}" %></td>
      <td><%= link_to 'Edit', edit_book_path(book), class: "edit_#{book.id}" %></td>
      <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "destroy_#{book.id}" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2 class="newbook">New book</h2>
<%= render 'form',book:@book %>