<% if flash[:notice] %>
    <div class="flash">
   	<%= flash[:notice] %>
    </div>
<% end %>

<h1 class="books">Books</h1>
<table>
  <thead>
    <tr>
      <th><b>Title</b></th>
			<th><b>Body</b></th>
			<th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show" , book_path(book.id) %></td>
			<td><%= link_to "Edit" , edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sure？"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h1 class="newbook">New book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book', class:'create-book' %>

<% end %>